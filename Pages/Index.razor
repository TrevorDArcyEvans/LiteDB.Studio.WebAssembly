@page "/"

@using BlazorMonaco

<style>
  .monaco-editor-container 
  { 
    min-height: 300px;
    border-width: 1px;
    border-color: black;
    border-style: solid;
  }
</style>

<PageTitle>LiteDB Studio (WebAssembly version)</PageTitle>

<button onclick="@(async () => await OpenAndReadFile())">Browse...</button>
<hr/>

<div class="form-group-sm">
  <label class="control-label">Info</label>
  <textarea rows="20" value="@_info" class="form-control"></textarea>
</div>

<label for="code">Query</label>
<div>
  <MonacoEditor @ref="_query" id="code" ConstructionOptions="SQL_EditorOptions" />
</div>
